# Configuration de production pour Docker
# Copier ce fichier vers .env.production avant le déploiement

# Base de données
DB_HOST=mysql
DB_USER=bibliotheque_user
DB_PASSWORD=bibliotheque_password
DB_NAME=bibliotheque

# Sécurité
JWT_SECRET=your_super_secure_jwt_secret_here_change_in_production

# Email (optionnel)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Application
NODE_ENV=production
PORT=3001
NEXT_PUBLIC_API_URL=http://localhost:3001/api
